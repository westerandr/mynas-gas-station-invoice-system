<%- include('../partials/header') %>
<% const isEdit = mode == 'edit'; %>
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1><%- title %></h1>
    </div>
    <div>
        <a href='<%- isEdit ? '/client/details/'+clientDetail.id : '/client' %>' class='btn btn-secondary btn-lg'>Back</a>
    </div>
</div>
<form 
    method="POST" 
    action="<%- isEdit ? '/client/'+clientDetail.id : '/client' %>"
    >
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%-  isEdit ? clientDetail.name : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="invoice" class="form-label">Billing Number Start</label>
        <input type="number" class="form-control" min="1" name="invoice" id="invoice" value="<%- isEdit ? clientDetail.billingCounter : '' %>" required>
        <div class="form-text">The next Billing Invoice Number for Client</div>
      </div>
    <button type="submit" class="btn btn-primary"><%- isEdit ? 'Update' : 'Create' %></button>
  </form>
<%- include('../partials/footer') %>
